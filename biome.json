{
  "formatter": {
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "lineWidth": 120
    }
  },
  "json": {
    "formatter": {
      "enabled": false
    }
  },
  "files": {
    "includes": [
      "src/**/*.cjs",
      "src/**/*.js",  
      "src/**/*.ts", 
      "scripts/*.cjs", 
      "witnet/**/*.cjs",
      "!witnet/**/_*.cjs"
    ]
  },
  "linter": {
    "includes": [
      "src/**/*.cjs",
      "src/**/*.js",  
      "src/**/*.ts", 
      "scripts/*.cjs", 
      "witnet/**/*.cjs",
      "!witnet/**/_*.cjs"
    ],
    "rules": {
      "complexity": {
        "noBannedTypes": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off",
        "noControlCharactersInRegex": "off",
        "noExplicitAny": "off",
        "noFallthroughSwitchClause": "off",
        "noImplicitAnyLet": "off",
        "noUnsafeDeclarationMerging": "off"
      }
    }
  }
}